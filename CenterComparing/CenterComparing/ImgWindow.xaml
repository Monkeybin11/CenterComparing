<UserControl x:Class="CenterComparing.ImgWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CenterComparing"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="cvsMain" Height="600" Width="800" Background="Transparent" ClipToBounds="True" Drop="cvsMain_Drop" AllowDrop="True"  MouseLeftButtonDown="cvsMain_MouseLeftButtonDown" MouseMove="cvsMain_MouseMove" MouseLeftButtonUp="cvsMain_MouseLeftButtonUp">
            <Image x:Name="ImgBack" Stretch="Fill" Height="600" Width="800"/>
        </Canvas>
    </Grid>
</UserControl>
